{
  "name": "smtp-connection-as-promised",
  "version": "0.2.2",
  "description": "smtp-connection as promised",
  "main": "lib/smtp-connection-as-promised.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/dex4er/js-smtp-connection-as-promised"
  },
  "keywords": [
    "smtp-connection",
    "promise"
  ],
  "author": "Piotr Roszatycki",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dex4er/js-smtp-connection-as-promised/issues"
  },
  "homepage": "http://github.com/dex4er/js-smtp-connection-as-promised",
  "engines": {
    "node": ">=5.0.0"
  },
  "dependencies": {
    "any-promise": "^1.3.0",
    "nodemailer": "^4.1.2"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "mailcomposer": "^4.0.2",
    "promise-socket": "^1.0.0",
    "smtp-server-as-promised": "^0.1.2",
    "snazzy": "^7.0.0",
    "standard": "^10.0.3",
    "tap": "^10.7.2",
    "tap-given": "^0.6.0"
  },
  "scripts": {
    "test": "standard --verbose | snazzy && tap test/*.js",
    "test-coverage": "npm test -- --coverage",
    "test-onchange-lcovonly": "npm run -s test-coverage -- -R min --coverage-report lcovonly; onchange '**/*.js' -- npm run -s test-coverage -- -R min --coverage-report lcovonly",
    "update": "npm run update:upgrade && npm run update:reinstall",
    "update:upgrade": "ncu -- --upgrade --upgradeAll",
    "update:reinstall": "rm -f package-lock.json && rm -rf node_modules && npm cache clear --force && npm install"
  },
  "standard": {
    "globals": [
      "After",
      "And",
      "Feature",
      "Given",
      "Scenario",
      "Then",
      "When"
    ]
  },
  "nyc": {
    "exclude": []
  }
}
